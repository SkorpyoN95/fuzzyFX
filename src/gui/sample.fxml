<?import javafx.scene.layout.GridPane?>
<?import eu.hansolo.medusa.Gauge?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<GridPane fx:controller="gui.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    <Gauge fx:id="speed_gauge" animated="true" title="Speed Meter" unit="km/h" maxValue="120" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <GridPane GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="center" hgap="10" vgap="10">
        <Text fx:id="friction" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Text fx:id="angle" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Text fx:id="experience" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    </GridPane>
</GridPane>